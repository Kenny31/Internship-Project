<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView android:id="@+id/alltopicstextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/all_topics_title"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:textSize="16sp"
                android:layout_margin="16dp"/>

            <!--<Button-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_marginRight="16dp"-->
                <!--android:layout_alignBottom="@+id/alltopicstextview"-->
                <!--android:layout_alignTop="@+id/alltopicstextview"-->
                <!--android:text="@string/view_button_text"-->
                <!--android:background="@drawable/view_button_border"/>-->

        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView android:id="@+id/trendingtopicstextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/trending_topics_title"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:textSize="16sp"
                android:layout_margin="16dp"/>

            <!--<Button-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_marginRight="16dp"-->
                <!--android:layout_alignBottom="@+id/trendingtopicstextview"-->
                <!--android:layout_alignTop="@+id/trendingtopicstextview"-->
                <!--android:text="@string/view_button_text"-->
                <!--android:background="@drawable/view_button_border"/>-->

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/cardviewtrending"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>